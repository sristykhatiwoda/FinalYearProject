        </th>
        <th>
            @Html.DisplayNameFor(model => model.FacultyTitle)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FacultyID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FacultyTitle)
        </td>
        <td>
